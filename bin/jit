#!/usr/bin/env ruby

require_relative "../lib/command"

begin
  cmd = Command.execute(Dir.getwd, ENV, ARGV, $stdout, $stderr)
  exit cmd.status
rescue Command::Unknown => error
  warn "jit: #{error.message}"
  exit 1
rescue => error
  warn "fatal: #{error.message}"
  if ENV["DEBUG"]
    error.backtrace.each do |line|
      warn "        from #{line}"
    end
  end
  exit 1
end
